# Environment configuration for the Sales Assistant project

# Core services
ENVIRONMENT=local
OPENAI_API_KEY=changeme-openai-key
DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/sales_assistant
REDIS_URL=redis://redis:6379/0
VECTOR_DB_URL=postgresql+psycopg://postgres:postgres@db:5432/sales_assistant

# API settings
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_ORIGINS=*

# Logging & observability
LOG_LEVEL=INFO
SENTRY_DSN=
OTEL_EXPORTER_OTLP_ENDPOINT=

# Feature flags
KNOWLEDGE_WORKERS_ENABLED=true
RECOMMENDATION_CACHING_ENABLED=true

# Security
API_KEY_SECRET=changeme-api-key-secret
JWT_SECRET=changeme-jwt-secret
